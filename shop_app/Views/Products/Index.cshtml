@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<shop_app.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<h1>Product List</h1>

<div class="container mt-4">
    <h1 class="text-center mb-4">Список продуктов</h1>
    <div class="row">
        @if (!Model.Any())
        {
            <div class="col-12">
                <p class="text-center text-muted">Нет доступных продуктов.</p>
            </div>
        }
        else
        {
            foreach (var product in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="~/img/product_test.jpg" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;" />
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text text-muted">@product.Description</p>
                            <p class="card-text"><strong>Цена:</strong> @product.Price.ToString()</p>
                            <p class="card-text"><strong>Количество:</strong> @product.Quantity</p>
                        </div>
                        <div class="card-footer text-center">
                            <a asp-action="Details" asp-route-id="@product.Id">Подробнее</a> |
                            <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@product.Id">Добавить в корзину</a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>


